name: RedHorizon - BOOK SPOTLIGHT (MWF 18:00 UTC)
on:
  schedule: [ { cron: "0 18 * * 1,3,5" } ]
  workflow_dispatch:
permissions: { contents: write }
jobs:
  run:
    runs-on: ubuntu-latest
    timeout-minutes: 2
    concurrency: redhorizon-books
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with: { python-version: "3.11", cache: "pip" }
      - run: pip install -r requirements.txt
      - name: Run book spotlight
        env:
          TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
          TELEGRAM_CHANNEL_ID: ${{ secrets.TELEGRAM_CHANNEL_ID }}
        run: |
          python - << 'PY'
          from red_horizon.tasks import run_book_spotlight
          print(run_book_spotlight())
          PY
      - name: Commit index
        run: |
          git config user.email "bot@users.noreply.github.com"
          git config user.name "redhorizon-bot"
          git add book_index.json
          git diff --staged --quiet || git commit -m "Update book index"
          git push

