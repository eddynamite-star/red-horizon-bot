name: RedHorizon - DIGEST (09:00 UTC)
on:
  schedule: [ { cron: "0 9 * * *" } ]
  workflow_dispatch:
permissions: { contents: write }
jobs:
  run:
    runs-on: ubuntu-latest
    timeout-minutes: 5
    concurrency: redhorizon-digest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with: { python-version: "3.11", cache: "pip" }
      - run: pip install -r requirements.txt
      - name: Run digest
        env:
          TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
          TELEGRAM_CHANNEL_ID: ${{ secrets.TELEGRAM_CHANNEL_ID }}
          ZAPIER_HOOK_URL: ${{ secrets.ZAPIER_HOOK_URL }}
        run: |
          python - << 'PY'
          from red_horizon.tasks import run_digest
          print(run_digest()))
          PY
      - name: Commit state
        run: |
          git config user.email "bot@users.noreply.github.com"
          git config user.name "redhorizon-bot"
          git add seen_links.json
          git diff --staged --quiet || git commit -m "Update state [digest]"
          git push

